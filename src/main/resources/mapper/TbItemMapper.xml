<?xml version="1.0" encoding="UTF-8" ?>  	
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 
 <!-- 追加一个sql mapper接口和哪一个方法对应那么接口就写哪一个地址 -->
 <mapper namespace="com.taotao.dao.ItemDao">
 	<!--获取所有商品-->
 	<select id="findTbItems" resultType="com.taotao.pojo.TbItem">
		select * from tb_item
	</select>
	<!--根据TbItem商品Id查找商品商品-->
	<select id="geTbItemById" parameterType="long" resultType="com.taotao.pojo.TbItem">
		select * from tb_item where id=#{itemId}
	</select>
 </mapper>
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 